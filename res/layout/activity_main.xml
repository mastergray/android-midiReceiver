<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/deviceButton"
        style="@style/custom_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/onButton"
        android:background="@drawable/device_button"
        android:text="Get Device" />

    <TextView
        android:id="@+id/consoleView"
        style="@style/custom_view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/deviceButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/offButton"
        android:layout_below="@+id/deviceButton"
        android:background="@drawable/custom_text_view"
        android:enabled="false"
        android:gravity="center"
        android:scrollbars="vertical"
        android:text="Inactive" />

    <Button
        android:id="@+id/offButton"
        style="@style/custom_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/off_button"
        android:enabled="false"
        android:text="Off" />

    <Button
        android:id="@+id/onButton"
        style="@style/custom_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/offButton"
        android:layout_alignBottom="@+id/offButton"
        android:layout_toLeftOf="@+id/offButton"
        android:background="@drawable/on_button"
        android:enabled="false"
        android:text="On" />

</RelativeLayout>
